<UserControl
    x:Class="GTA5OnlineTools.Views.UC3ToolsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:GTA5OnlineTools.Assets.Styles.Attached"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    Style="{StaticResource UserControlStyle_Loading}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style BasedOn="{StaticResource ButtonStyle_Tools}" TargetType="{x:Type Button}" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.Row="0"
            Margin="5,5,0,5"
            Style="{StaticResource ScrollViewerStyle_VAHD}">
            <WrapPanel>
                <Button
                    attached:Icon.Value="&#xed18;"
                    Background="#67C23A"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="KiddionChsON"
                    Content="启用Kiddion汉化" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Background="#F56C6C"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="KiddionChsOFF"
                    Content="关闭Kiddion汉化" />
                <Button
                    attached:Icon.Value="&#xe64b;"
                    Background="#67C23A"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="KiddionKey87"
                    Content="启用Kiddion[87键]" />
                <Button
                    attached:Icon.Value="&#xe64b;"
                    Background="#F56C6C"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="KiddionKey104"
                    Content="启用Kiddion[104键]" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Background="#67C23A"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="SubVersionKey87"
                    Content="启用SubVersion[87键]" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Background="#F56C6C"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="SubVersionKey104"
                    Content="启用SubVersion[104键]" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditKiddionConfig"
                    Content="编辑Kiddion配置文件" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditSubVersionSettings"
                    Content="编辑SubVersion配置文件" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditKiddionTP"
                    Content="编辑Kiddion自定义传送" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditKiddionVC"
                    Content="编辑Kiddion自定义载具" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditGTAHaxStat"
                    Content="编辑GTAHax导入文件" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="GTA5Win2TopMost"
                    Content="GTA5窗口置顶" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="GTA5Win2NoTopMost"
                    Content="GTA5窗口取消置顶" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="RestartApp"
                    Content="重启程序" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="InitCPDPath"
                    Content="初始化配置文件夹" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="ReleaseDirectory"
                    Content="辅助释放目录" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="CurrentDirectory"
                    Content="辅助当前目录" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="ReNameAppCN"
                    Content="重命名小助手中文" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="ReNameAppEN"
                    Content="重命名小助手英文" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="RefreshDNSCache"
                    Content="刷新DNS缓存" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="EditHosts"
                    Content="编辑Hosts文件" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="DefenderControl"
                    Content="Win10安全中心设置" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="BaseInjector"
                    Content="基础DLL注入器" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="OpenUpdateWindow"
                    Content="打开更新窗口" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="MinimizeToTray"
                    Content="最小化小助手到系统托盘" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="ManualGC"
                    Content="GC垃圾回收" />
                <Button
                    attached:Icon.Value="&#xed18;"
                    Command="{Binding ToolsButtonClickCommand}"
                    CommandParameter="SwitchAudio"
                    Content="切换按键音效" />
            </WrapPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <UniformGrid Rows="2">
                <TextBlock
                    Margin="5"
                    FontWeight="Black"
                    Text="Discord加速" />
                <TextBlock Margin="5">
                    <Hyperlink
                        Command="{Binding HyperlinkClickCommand}"
                        CommandParameter="https://steampp.net"
                        ToolTip="https://steampp.net">
                        Steam++
                    </Hyperlink>
                </TextBlock>
            </UniformGrid>
            <UniformGrid Rows="2">
                <TextBlock
                    Margin="5"
                    FontWeight="Black"
                    Text="GitHub加速" />
                <TextBlock Margin="5">
                    <Hyperlink
                        Command="{Binding HyperlinkClickCommand}"
                        CommandParameter="https://github.com/dotnetcore/FastGithub/releases"
                        ToolTip="https://github.com/dotnetcore/FastGithub/releases">
                        FastGithub
                    </Hyperlink>
                </TextBlock>
            </UniformGrid>
            <UniformGrid Rows="2">
                <TextBlock
                    Margin="5"
                    FontWeight="Black"
                    Text="Snipaste截图工具" />
                <TextBlock Margin="5">
                    <Hyperlink
                        Command="{Binding HyperlinkClickCommand}"
                        CommandParameter="https://zh.snipaste.com"
                        ToolTip="https://zh.snipaste.com">
                        Snipaste
                    </Hyperlink>
                </TextBlock>
            </UniformGrid>
            <UniformGrid Rows="2">
                <TextBlock
                    Margin="5"
                    FontWeight="Black"
                    Text="免费游戏加速器" />
                <TextBlock Margin="5">
                    <Hyperlink
                        Command="{Binding HyperlinkClickCommand}"
                        CommandParameter="https://www.nn.com"
                        ToolTip="https://www.nn.com">
                        NN加速器
                    </Hyperlink>
                </TextBlock>
            </UniformGrid>
        </StackPanel>
    </Grid>

</UserControl>
